{
    "name": "vendi-advertising/vendi-asset-loader",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Haas",
            "email": "chris@vendiadvertising.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "symfony/dotenv": "^4.3|^5",
        "webmozart/glob": "^4.1",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^7|^8|^9",
        "sensiolabs/security-checker": "^6",
        "symfony/var-dumper": "^4|^5"
    },
    "config": {
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "Vendi\\VendiAssetLoader\\": "src/"
        },
        "files": [
            "src/Functions.php"
        ]
    }
}
