{
    "name": "vendi-advertising/vendi-asset-loader",
    "type": "library",
    "description": "Dynamically enqueue CSS and JS files",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Haas",
            "email": "chris@vendiadvertising.com"
        }
    ],
    "require": {
        "php": "^8.0|^8.1",
        "symfony/filesystem": "^6",
        "webmozart/glob": "^4"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^8|^9"
    },
    "config": {
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "Vendi\\VendiAssetLoader\\": "src/"
        },
        "files": [
            "src/Functions.php"
        ]
    }
}
